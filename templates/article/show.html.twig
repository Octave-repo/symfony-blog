{% extends 'base.html.twig' %}
{% block title %}{{ article.titre }}{% endblock %}
{% block body %}
    <div class="wrapper">
        <div class="main-wrapper">
            <h1>{{ article.titre }}</h1>
            <p>{{ article.text }}</p>
            <br>De : {{ article.author }}</br>
            <br></br>
            <a href="{{ path('article_index') }}"><i class="fas fa-backward"></i>Retour</a> 
            {% if app.user %}
                {% if app.user.username == article.author %}
                    <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i>Editer</a>
                    <p>{{ include('article/_delete_form.html.twig') }} </p>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}
